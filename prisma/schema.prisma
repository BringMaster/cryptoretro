datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

model WatchlistItem {
  id        String   @id @default(cuid())
  userId    String
  assetId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, assetId])
  @@index([userId])
}

model Portfolio {
  id        String   @id @default(cuid())
  userId    String
  assetId   String
  amount    Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, assetId])
  @@index([userId])
}

model Web3Wallet {
  id        String   @id @default(cuid())
  userId    String
  address   String
  chain     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, address, chain])
  @@index([userId])
}
